{
  "name": "@lhs/scaffold",
  "version": "1.0.0",
  "bin": {
    "vue-scaffold": "./bin/cli.ts"
  },
  "scripts": {
    "build": "tsc && chmod +x bin/cli.ts",
    "dev": "ts-node ./bin/cli.ts init",
    "prepublishOnly": "npm run build && cp -r src/templates dist/templates",
    "webpack:dev": "cd src/templates/webpack/default/ && yarn run webpack serve --mode development",
    "vite:dev": "cd src/templates/webpack/default/ && yarn run vite",
    "prepare": "husky install"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.5.3",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "fs-extra": "^11.2.0",
    "minimist": "^1.2.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.4",
    "husky": "^9.1.7",
    "typescript": "^5.8.3"
  },
  "files": [
    "bin",
    "lib",
    "types",
    "src/templates"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}