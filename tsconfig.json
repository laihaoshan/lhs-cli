{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		// "declaration": true,
		// "declarationDir": "./dist/types",
		"moduleResolution": "node",
		// "typeRoots": ["./node_modules/@types"],
		// "types": [] // 不自动包含任何类型定义
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"types",
		"src/templates/**/*", // 排除所有模板文件
		"src/lib/axios/templates/*", // 排除所有模板文件
		"src/lib/eslint_prettier/**/*.json" // 排除所有模板文件
	]
}
